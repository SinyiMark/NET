        <Label Content="Phone:" HorizontalAlignment="Left" Margin="111,112,0,0" VerticalAlignment="Top" Width="46"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="172,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <Label Content="E-mail:" HorizontalAlignment="Left" Margin="111,160,0,0" VerticalAlignment="Top" Width="46"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="204,217,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
