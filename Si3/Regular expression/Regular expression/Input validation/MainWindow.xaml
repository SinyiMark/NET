        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="172,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="111,65,0,0" VerticalAlignment="Top" Width="46"/>
